@model FreidrdEventApp4.Models.DomainModel.Event
@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EventId">Event Id</label>
        <input asp-for="EventId" class="form-control">
        <label asp-for="EventName">Event Name</label>
        <input asp-for="EventName" class="form-control">
        <label asp-for="EventCity">Event City</label>
        <input asp-for="EventCity" class="form-control">
        <label asp-for="EventDate">Event Date</label>
        <input asp-for="EventDate" class="form-control">
        <label asp-for="VenueName">Venue Name</label>
        <input asp-for="VenueName" class="form-control">
        <label asp-for="VenueAddress">Venue Address</label>
        <input asp-for="VenueAddress" class="form-control">
        <label asp-for="PromoterName">Promoter Name</label>
        <input asp-for="PromoterName" class="form-control">
    </div>

    <input type="hidden" asp-for="EventId" />

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Test" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>